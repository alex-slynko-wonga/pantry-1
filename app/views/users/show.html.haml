= javascript_include_tag "specific/refresh_machine_status.js"

.row
  .span4
    = image_tag(@user.image_url(440), alt: 'Gravatar', size: "220x220")
  .span8
    %h3= @user.name
    %strong Username:
    %p= @user.username
    %strong Email:
    %p= mail_to @user.email
    %strong Last Activity:
    %p= @user.last_seen_at
    - if policy(@user).edit?
      = link_to 'Edit', edit_user_url(@user)
- if @user.ec2_instances.present?
  .row
    %h4 Instances
    = render 'shared/ec2_instance_row', ec2_instances: @user.ec2_instances
