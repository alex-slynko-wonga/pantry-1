%h1 Team #{@team.name}
%p= link_to "Edit this team", edit_team_url(@team)

.row-fluid
  .span12
    %h4
      Team Members
    %table.table
      %thead
        %tr
          %th Picture
          %th Username
          %th Name
          - @team.users.each_with_index do |user|
            %tr
              %td
                %img{src: user.image_url(25), alt: 'Gravatar'}
              %td= link_to user.username, user_url(user.id)
              %td= user.name
.row-fluid
  .span12
    %h4 Jenkins server
    - if @jenkins_server
      %table.table
        %thead
          %tr
            %th ID
            %th Address
            %th Status
            %th OS
            %th URL
          = render partial: 'jenkins_instance', collection: [@jenkins_server]
    - else
      %p= link_to "Create a new jenkins server", new_jenkins_server_url
    
    - if @jenkins_slaves && @jenkins_slaves.size > 0
      %h4 Jenkins slaves
      %table.table
        %thead
          %tr
            %th ID
            %th Address
            %th Status
            %th OS
          = render partial: 'jenkins_instance', collection: @jenkins_slaves
.row-fluid
  .span12
    - if @ec2_instances.size > 0
      %h4 Instances
      %table.table
        %thead
          %tr
            %th ID
            %th Name
            %th Status
            %th OS
          = render partial: 'shared/ec2_instance_row', collection: @ec2_instances

    = create_new_ec2_instance(@can_create_ec2_instance)
    = @con_create_ec2_instance

