%table.table
  %thead
    %tr
      %th #
      %th Name
      %th Description
      %th Status
      %th CreatedAt
      %th StartTime
      %th EndTime
    - @jobs.each_with_index do |job, index|
      %tr
        %td= index + 1
        %td= job.name
        %td= job.description
        %td= job.status
        %td= job.created_at
        %td= job.start_time
        %td= job.end_time
