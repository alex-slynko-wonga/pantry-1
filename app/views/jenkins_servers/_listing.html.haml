%div{"ng-controller" => "JenkinsServersCtrl", "ng-init" => "getInstances()"}
  - if current_team
    %span{'id' => 'single_team_id', 'data-team_id' => current_team.id}
      Current team:
      = link_to current_team.name, current_team
  - else
    %select{:id => "change_team_id", :name => "change_team_id", "ng-change" => "getInstances()", "ng-model" => "team_id"}
      %option{:value => ""}
      = user_teams.each do |team|
        %option{:value => team.id}= team.name

  %table.table
    %thead
      %tr
        %th #
        %th InstanceID
        %th Name
        %th ImageID
        %th Groups
        %th State
    %tr{"ng-repeat" => "instance in instances"}
      %td
        %a{:href => "/jenkins_servers/{{instance.id}}"} {{instance.id}}
      %td {{instance.ec2_instance.id}}
      %td {{instance.ec2_instance.name}}
      %td {{instance.ec2_instance.ami}}
      %td {{instance.ec2_instance.security_group_ids}}
      %td {{instance.ec2_instance.human_status}}
