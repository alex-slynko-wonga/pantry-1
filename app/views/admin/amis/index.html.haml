%h1 AMIs

%table.table
  %thead
    %tr
      %th #
      %th Name
      %th AMI ID
      %th OS
      %th Hidden
      %th
  %tbody
    - @amis.each_with_index do |ami, index|
      %tr
        %td= index + 1
        %td= link_to ami.name, edit_admin_ami_url(ami)
        %td= ami.ami_id
        %td= os_image(ami.platform)
        %td= ami.hidden || false
= link_to 'New AMI', new_admin_ami_url
